<launch>
  <master auto="start"/>

  <!-- Run the map server -->
  <!-- <node name="map_server" pkg="map_server" type="map_server" args="$(find my_map_package)/my_map.pgm my_map_resolution"/> -->

  <!--- Run AMCL -->
  <include file="$(find amcl)/examples/amcl_diff.launch" />

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(agv_nav)/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(agv_nav)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(agv_nav)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(agv_nav)/global_costmap_params.yaml" command="load" />
    <rosparam file="$(agv_nav)/base_local_planner_params.yaml" command="load" />
  </node>
</launch>
